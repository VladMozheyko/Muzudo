<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/profile_background">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_nav_linear">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emphaized_white_view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_profile_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/profile_information"
                    android:textColor="#2D2B71"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/edt_name_surname"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/name_surname"
                    android:textColor="#2D2B71"
                    app:layout_constraintStart_toStartOf="@+id/edt_name_surname"
                    app:layout_constraintTop_toBottomOf="@+id/txt_profile_information" />

                <EditText
                    android:id="@+id/edt_name_surname"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/emphaized_edit_text"
                    android:paddingLeft="20dp"
                    android:textColor="#2D2B71"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/profile_location"
                    android:textColor="#2D2B71"
                    app:layout_constraintStart_toStartOf="@+id/edt_name_surname"
                    app:layout_constraintTop_toBottomOf="@+id/edt_name_surname" />

                <EditText
                    android:id="@+id/location"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/emphaized_edit_text"
                    android:paddingLeft="20dp"
                    android:textColor="#2D2B71"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1" />

                <TextView
                    android:id="@+id/txt_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/profile_phone_number"
                    android:textColor="#2D2B71"
                    app:layout_constraintStart_toStartOf="@+id/location"
                    app:layout_constraintTop_toBottomOf="@+id/location" />

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/emphaized_edit_text"
                    android:paddingLeft="20dp"
                    android:textColor="#2D2B71"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_phone_number" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/profile_email"
                    android:textColor="#2D2B71"
                    app:layout_constraintStart_toStartOf="@+id/phone_number"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number" />

                <EditText
                    android:id="@+id/profile_email"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/emphaized_edit_text"
                    android:paddingLeft="20dp"
                    android:textColor="#2D2B71"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_email" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_email" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/emphaized_white_view">

                <TextView
                    android:id="@+id/txt_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_change_password"
                    android:textColor="#2D2B71"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/txt_password"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/profile_information"
                    android:textColor="#2D2B71"
                    app:layout_constraintStart_toStartOf="@+id/edt_password"
                    app:layout_constraintTop_toBottomOf="@+id/txt_change_password" />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/emphaized_edit_text"
                    android:paddingLeft="20dp"
                    android:textColor="#2D2B71"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_password" />

                <TextView
                    android:id="@+id/txt_new_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/new_password"
                    android:textColor="#2D2B71"
                    app:layout_constraintStart_toStartOf="@+id/edt_password"
                    app:layout_constraintTop_toBottomOf="@+id/edt_password" />

                <EditText
                    android:id="@+id/edt_new_password"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/emphaized_edit_text"
                    android:paddingLeft="20dp"
                    android:textColor="#2D2B71"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_new_password" />

                <TextView
                    android:id="@+id/txt_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/confirm_password"
                    android:textColor="#2D2B71"
                    app:layout_constraintStart_toStartOf="@+id/edt_new_password"
                    app:layout_constraintTop_toBottomOf="@+id/edt_new_password" />

                <EditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/emphaized_edit_text"
                    android:paddingLeft="20dp"
                    android:textColor="#2D2B71"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_confirm_password" />

                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_blue_button"
                    android:onClick="onClick"
                    android:text="@string/btn_change"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_confirm_password" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_change_password" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/footer" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>